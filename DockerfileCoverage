##################################################
# Section 1: Build the application
FROM ubuntu:18.04 as builder
MAINTAINER Haider Ali haiali@student.chalmers.se

RUN apt-get update -y && apt-get upgrade -y && apt-get dist-upgrade -y && apt-get install -y --no-install-recommends cmake build-essential gcc g++ gcovr ggcov lcov
	

ADD . /opt/sources
WORKDIR /opt/sources

RUN cd /opt/sources && \
 	g++ -Wall --coverage -fprofile-arcs -ftest-coverage helloworld.cpp PrimeChecker.cpp -o mybinary && \
	./mybinary 45 && ./mybinary 13 && ls && \
	gcov helloworld.cpp PrimeChecker.cpp && \
	lcov --capture --directory . --output-file coverage.info && \
	gcovr -r . && \
	genhtml -o coverage coverage.info && cp coverage.info /tmp


##################################################
# Section 2: Bundle the application.
FROM busybox:latest
MAINTAINER Haider Ali haiali@student.chalmers.se

#RUN apt-get update -y && apt-get upgrade -y && apt-get dist-upgrade -y

WORKDIR /opt
COPY --from=builder /tmp/coverage.info .
ENTRYPOINT ["/opt/coverage.info"]
