##################################################
# Section 1: Build the application
FROM ubuntu:18.04 as builder
MAINTAINER Haider Ali haiali@student.chalmers.se

RUN apt-get update -y && apt-get upgrade -y && apt-get dist-upgrade -y

RUN apt-get install -y --no-install-recommends cmake build-essential \
	gcc g++ gcovr ggcov lcov

ADD . /opt/sources
WORKDIR /opt/sources

RUN cd /opt/sources && \
 	g++ -Wall --coverage -fprofile-arcs -ftest-coverage hell#oworld.cpp PrimeChecker.cpp -o mybinary && \
	./mybinary && ls && \
	gcov helloworld.cpp && lcov --directory . --capture --output-file coverage.info && \
	genhtml -o coverage coverage.info && cp coverage.info /tmp

#RUN cd /opt/sources && mkdir build && \
#    cd build && \
#    cmake -D CMAKE_BUILD_TYPE=Release .. && \
#    make && make test && cp helloworld /tmp

##################################################
# Section 2: Bundle the application.
FROM ubuntu:18.04
MAINTAINER Haider Ali haiali@student.chalmers.se

RUN apt-get update -y && apt-get upgrade -y && apt-get dist-upgrade -y

WORKDIR /opt
COPY --from=builder /tmp/coverage.info .
ENTRYPOINT ["/opt/coverage.info"]
